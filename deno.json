{
	"tasks": {
		"lint": "./bin/lint",
		"e2e": "./bin/e2e"
	},
	"fmt": {
		"useTabs": true,
		"singleQuote": true,
		"lineWidth": 100,
		"exclude": [
			"e2e-test"
		]
	},
	"lint": {
		"exclude": [
			"e2e-test"
		]
	},
	"test": {
		"exclude": [
			"e2e-test"
		]
	},
	"compilerOptions": {
		"strict": true,
		"strictPropertyInitialization": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"allowJs": false,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true
	}
}
